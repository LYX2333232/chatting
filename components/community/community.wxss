/* components/community/community.wxss */
.tabBar{
  display: flex;
  justify-content: space-evenly;
}

.tab-item{
  height: 8vh;
  line-height: 8vh;
}

.activate{
  color: #74D1C4;
  border-bottom: #74D1C4 0.1rem solid;
  font-size: 1.2rem;
}

.noactivate{
  color: #B3B3B3;
}

.green{
  position: fixed;
  background-color: #3EC6AB;
  width: 4rem;
  height: 4rem;
  border-radius: 4rem;
  bottom: 5vh;
  right: 5vw;
}

.my{
  position: fixed;
  background-color: #F2D87C;
  width: 3rem;
  height: 3rem;
  border-radius: 3rem;
  text-align: center;
  line-height: 3rem;
  color: white;
  bottom: 20vh;
  right: 15vw;
}
.publish{
  position: fixed;
  background-color: #F2D87C;
  width: 3rem;
  height: 3rem;
  border-radius: 3rem;
  text-align: center;
  line-height: 3rem;
  color: white;
  bottom: 10vh;
  right: 30vw;
}

.top{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
}

.top .left{
  width: 1.5rem;
  height: 1.5rem;
  background-color: #707070;
  border-radius: 1.5rem;
}

.top input{
  width: 12rem;
  height: 1.5rem;
  background-color: white;
  border-radius: 0.5rem;
  font-size: 0.7rem;
}

.top .right{
  width: 2rem;
  height: 2rem;
  position: relative;
}

.top .right image{
  width: 100%;
  height: 100%;
}

.top .right .info{
  position: absolute;
  right: 0;
  width: 1rem;
  height: 1rem;
  border-radius: 1rem;
  background-color: red;
  color: white;
  font-size: 0.5rem;
  line-height: 1rem;
  text-align: center;
}